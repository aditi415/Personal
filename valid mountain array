class Solution {
public:
    bool validMountainArray(vector<int>& arr) {
        bool inc=false,dec=false;
        int sz=arr.size();
        int m=0;
        int max_index=-1;
        for (int i = 0; i < sz; i++) {
           if (arr[i] > m) {
             m = arr[i]; // Update the maximum value
              max_index = i; // Store the index of the maximum value
    }
}
          int  tmp=arr[0];
          for(int i=1;i<=max_index;i++){
            if(tmp>=arr[i])
            return false;
            tmp=arr[i];
            inc=true;
          }
          for(int i=max_index+1;i<sz;i++){
            if(tmp<=arr[i])
            return false;
            tmp=arr[i];
            dec=true;
          }
          return (inc&dec);
    }
};
